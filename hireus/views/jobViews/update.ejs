<section class="post-job-page">
  <div class="post-job-card">

    <div class="post-job-header">
      <h1>Edit Job</h1>
      <p>Update the details of this job posting</p>
    </div>

    <form
      action="/home/<%= job._id %>/update?_method=PUT"
      method="POST"
      class="post-job-form needs-validation"
      novalidate
    >

      <div class="form-group">
        <label>Job Title</label>
        <input
          type="text"
          class="form-control"
          name="Job[title]"
          value="<%= job.title %>"
          required
        />
        <div class="invalid-feedback">Please provide a job title.</div>
      </div>

      <div class="form-group">
        <label>Job Description</label>
        <textarea
          class="form-control"
          rows="4"
          name="Job[description]"
          required
        ><%= job.description %></textarea>
        <div class="invalid-feedback">Please provide a job description.</div>
      </div>

      <div class="form-group">
        <label>Required Skills</label>
        <input
          type="text"
          class="form-control"
          name="Job[requiredSkills]"
          value="<%= job.requiredSkills %>"
          required
        />
        <small class="text-muted">Comma separated</small>
        <div class="invalid-feedback">Please provide required skills.</div>
      </div>

      <div class="form-grid">
        <div class="form-group">
          <label>Experience Level</label>
          <input
            type="text"
            class="form-control"
            name="Job[experienceLevel]"
            value="<%= job.experienceLevel %>"
            required
          />
        </div>

        <div class="form-group">
          <label>Job Type</label>
          <input
            type="text"
            class="form-control"
            name="Job[jobType]"
            value="<%= job.jobType %>"
            required
          />
        </div>

        <div class="form-group">
          <label>Location</label>
          <input
            type="text"
            class="form-control"
            name="Job[location]"
            value="<%= job.location %>"
            required
          />
        </div>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn-primary">Update Job</button>
        <a href="/home/<%= job._id %>" class="btn-secondary">Cancel</a>
      </div>

    </form>
  </div>
</section>
