<section class="apply-page">
  <div class="apply-card">

    <!-- Header -->
    <div class="apply-header text-center">
      <h1>Create Candidate Profile</h1>
      <p>
        Register once and apply to jobs instantly on <strong>HireUs</strong>
      </p>
    </div>

    <!-- Candidate Register Form -->
    <form
      action="/register/candidate"
      method="POST"
      enctype="multipart/form-data"
      class="apply-form"
    >

      <!-- Full Name -->
      <div class="form-group">
        <label>
          <i class="fa-solid fa-user me-1"></i>
          Full Name
        </label>
        <input
          type="text"
          class="form-control"
          name="name"
          placeholder="Enter your full name"
          required
        />
      </div>

      <!-- Email -->
      <div class="form-group">
        <label>
          <i class="fa-solid fa-envelope me-1"></i>
          Email Address
        </label>
        <input
          type="email"
          class="form-control"
          name="email"
          placeholder="example@gmail.com"
          required
        />
      </div>

      <!-- Password -->
      <div class="form-group">
        <label>
          <i class="fa-solid fa-lock me-1"></i>
          Password
        </label>
        <input
          type="password"
          class="form-control"
          name="password"
          placeholder="Minimum 6 characters"
          required
        />
      </div>

      <!-- Phone -->
      <div class="form-group">
        <label>
          <i class="fa-solid fa-phone me-1"></i>
          Phone Number
        </label>
        <input
          type="text"
          class="form-control"
          name="phone"
          placeholder="9999999999"
          required
        />
      </div>

      <!-- Skills -->
      <div class="form-group">
        <label>
          <i class="fa-solid fa-code me-1"></i>
          Skills
        </label>
        <input
          type="text"
          class="form-control"
          name="skills"
          placeholder="Java, React, Node.js, MongoDB"
          required
        />
        <small class="text-muted">
          Separate skills using commas.
        </small>
      </div>

      <!-- Resume Upload -->
      <div class="form-group">
        <label>
          <i class="fa-solid fa-file-pdf me-1"></i>
          Upload Resume (PDF)
        </label>
        <input
          type="file"
          class="form-control"
          name="resume"
          accept=".pdf"
          required
        />
      </div>

      <!-- Actions -->
      <div class="form-actions">
        <button type="submit" class="btn-primary">
          <i class="fa-solid fa-user-plus me-1"></i>
          Register Candidate
        </button>

        <a href="/login" class="btn-secondary">
          Already have an account?
        </a>
      </div>

    </form>
  </div>
</section>
