    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 mt-3">
    <%for(let list of allListings){%>
        <a href="/listings/<%=list._id%>" class="card-redirect">
        <div class="card col">
        <% if (list.images && list.images.length > 0) { %>
            <img 
              src="<%= list.images[0].url %>" 
              class="card-img-top"
              alt="listing-image"
              style="height: 20rem; object-fit: cover;"
            >
          <% } %>
        <div class="card-img-overlay"></div>
        <div class="card-body">
        <h5 class="card-title"><b><%=list.title%></b></h5>
        <p class="card-text" style="display: flex; flex-direction: row;">Price : â‚¹<%=list.price.toLocaleString("en-IN")%> <span class="tax-info">&nbsp;+18% GST</span>&nbsp;&nbsp;per night.</p>
        </div>
        </div>
        </a>
     <%}%>
    </div>
   