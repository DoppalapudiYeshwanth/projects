<%layout('layouts/boilerplate')-%>
<p class="mt-3"><b>Login to TravelNest!!</b></p>
<form class="row g-3 mt-2 needs-validation" action="/users/login" method="POST" novalidate>
    <div class="col-md-6">
    <label for="inputUsername4" class="form-label">Username</label>
    <input type="username" class="form-control" id="inputUsername4" name="username" required>
    <div class="invalid-feedback">Need a username</div>
  </div>
  <div class="col-md-6">
    <label for="inputPassword4" class="form-label">Password</label>
    <input type="password" class="form-control" id="inputPassword4" name="password"required>
    <div class="invalid-feedback">Need a password</div>
  </div>
  <div class="col-12">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck" required>
      <label class="form-check-label" for="gridCheck">
        Check me out
      </label>
      <div class="invalid-feedback">Please check the box</div>
    </div>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Login</button>
  </div>
</form>